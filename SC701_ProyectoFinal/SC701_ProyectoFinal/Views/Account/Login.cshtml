@model SC701_ProyectoFinal.Models.UsuarioModel
@{
    ViewData["Title"] = "Iniciar sesión"; 
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="py-0">
    <div class="container-fluid">
        <div class="row">
            <!-- Imagen lateral -->
            <div class="col-lg-6 px-0">
                <div class="sticky-top vh-lg-100 py-9">
                    <div class="bg-holder" style="background-image:url(/lib/img/signin.jpg);"></div>
                </div>
            </div>

            <!-- Formulario -->
            <div class="col-lg-6 py-6">
                <div class="row h-100 align-items-center justify-content-center">
                    <div class="col-sm-8 col-md-6 col-lg-10 col-xl-8">
                        <h3 class="display-4 fs-7">Bienvenido</h3>
                        <h6 class="text-danger mt-3">Accede con tus credenciales institucionales</h6>                        

                        <form id="FormInicioSesion" asp-action="Login" asp-controller="Account" class="mt-5">
                            <div class="mb-3">
                                <label asp-for="Correo" class="form-label">Correo</label>
                                <input name="correo" asp-for="Correo" class="form-control bg-light" placeholder="Correo electrónico" />
                            </div>

                            <div class="mb-0">
                                <label asp-for="Contrasena" class="form-label">Marca</label>
                                <input name="contrasena" asp-for="Contrasena" class="form-control bg-light" type="password" placeholder="Contraseña" />                                
                            </div>

                            <div class="mb-3 d-grid">
                                <button class="btn btn-dark mt-3" type="submit">Iniciar sesión</button>
                            </div>

                            <div class="text-danger">
                                @Html.ValidationSummary()
                            </div>
                        </form>
                        @if (ViewBag.Mensaje != null)
                        {
                            <div class="alert alert-warning text-center">
                                @ViewBag.Mensaje
                            </div>
                        }

